    flex-wrap: wrap;
    margin: 20rpx;
    width: 100%;
  }
  .img_item_i{
    display: block;
    width: 100%;
    height: 100%;
  }
  .add_icon{
    display: block;
    width: 100%;
    height: 100%;
  }
  
  .img_item {
    width: 30%;
    height: 210rpx;
