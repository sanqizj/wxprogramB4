/* pages/publish/publish.wxss */
page{
    height: 100%;
}
.selector{
    margin-left: 45rpx;
    color: #545454; 
    font-size: 28rpx;
    margin-top: 45rpx;
    margin-bottom: 75rpx;
    display: flex;
    position: relative;
}
.topic,.place{ 
    /* background-color: #fff;  */
    line-height: 120rpx; 
    border-width: 1px;
    border-style: none solid solid solid;
    border-color: #999999;
}
.postLab{
    margin: 30rpx 45rpx 45rpx 30rpx; 
    color: #545454; 
    font-size: 28rpx
}
.inputText{
    flex: block; 
    float: right; 
    text-align: right; 
    margin-right: 44rpx; 
    margin-top: 33rpx;
    color: #3a3030; 
    font-size: 28rpx
}
.postArea{
    margin-left: 33rpx; 
    margin-top: 33rpx;
    color: #6e6e6e; 
    font-size: 28rpx
}
/*.pictureButton,*/
.admitButton{
    margin: 45rpx 45rpx 45rpx 45rpx; 
    color: #545454; 
    font-size: 28rpx;
    width: 30%;
}
.picker{
    position:absolute;
    right:100rpx;
}
.box{
    color: #545454;
    position:absolute;
    right:100rpx;
    transform: scale(0.6,0.6);
    margin-bottom: 50rpx;
}

.add-image{
    display: flex;
    flex-wrap: wrap;
    margin: 20rpx;
    width: 100%;
  }
  .img_item_i{
    display: block;
    width: 100%;
    height: 100%;
  }
  .add_icon{
    display: block;
    width: 100%;
    height: 100%;
  }
  
  .img_item {
    width: 30%;
    height: 210rpx;
    position: relative;
    margin-right: 2%;
    margin-bottom: 2%;
  }
   .delete-image{
    position: absolute;
    right: 0rpx;
    top: 0rpx;
    width: 50rpx;
    height: 50rpx;
  }
  