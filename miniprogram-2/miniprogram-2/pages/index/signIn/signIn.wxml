<view class="container"> 
 
 <view class="login-icon"> 
 <image class="login-img" src="../../../img/loading.jpg"></image> 
 </view> 
 <view class="login-from"> 
 
 <!--账号-->
 <view class="inputView"> 
  <image class="nameImage" src="../../../img/name.png"></image> 
  <label class="loginLab">账号</label> 
  <input class="inputText" placeholder="请输入账号" bindinput="usernameInput" /> 
 </view> 
 <view class="line"></view> 
 
 <!--密码-->
 <view class="inputView"> 
  <image class="keyImage" src="../../../img/key.png"></image> 
  <label class="loginLab">密码</label> 
  <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" /> 
 </view> 
 
 <!--按钮-->
 <view class="loginBtnView"> 
  <button class="signInBtn" type="primary" size="{{primarySize}}"style="width:70%"bindtap="signIn">登录</button> 
 </view> 

 <view>
	<navigator class="signUp" bindtap="signUp" style="float: left;">注册</navigator>
	<navigator class="retrievePassword"bindtap="retrievePassword"style="float:right;">忘记密码</navigator>
 </view>

 </view> 
</view>